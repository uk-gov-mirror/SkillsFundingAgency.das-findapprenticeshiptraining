@using SFA.DAS.FAT.Web.Models
@{ 
    ViewData["Title"] = "Sorry, there is a problem with the service";
    ViewData["Description"] = "There is a problem with the service. Try again later.";
    ViewData[nameof(BreadCrumbViewModel)] = new BreadCrumbViewModel {Level = BreadCrumbLevel.Error};
}
<main class="govuk-main-wrapper" id="main-content">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">Sorry, there is a problem with the service</h1>
            <p class="govuk-body">Try again later.</p>
            <p class="govuk-body"><a href="https://help.apprenticeships.education.gov.uk/hc/en-gb#contact-us" class="govuk-link">Contact the Apprenticeship Service</a> if you need help.</p>

        </div>
    </div>
</main>